<html ng-app='coin-page'>
	<head>
		<meta charset="utf-8">
	</head>
	<body ng-controller='mainController'>
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="alert alert-info" ng-if="coins.length == 0">
						Nenhum cadastro!!
					</div>
					<div class="alert alert-info" ng-if="erro">
						{{erro}}
					</div>
					<table class="table table-bordered">
  					<thead>
  						<tr>
  							<th>Usuário</th>
  							<th>Dinheiro</th>
  							<th></th>
  							<th></th>
  							<th></th>
  							<th></th>
  						</tr>
  					</thead>
  					<tbody>
  						<tr ng-repeat="coin in coins">
  							<td>{{coin.userId}}</td>
  							<td>{{coin.cash}}</td>
  							<td>
  								<button type="button" class="btn btn-default" ng-click="updateCoin(coin.userId)">Atualizar</button></td>
  							<td>
  								<button type="button" class="btn btn-default" ng-click="deleteCoin(coin.userId)">Deletar</button></td>
  							<td>
  								<button type="button" class="btn btn-default" ng-click="debitCoin(coin.userId)">Debitar</button>
  							</td>
  							<td>
  								<button type="button" class="btn btn-default" ng-click="creditCoin(coin.userId)">Creditar</button>
  							</td>
  						</tr>
  					</tbody>
  				</table>
				</div>
				<div class="col-md-6">
					<form role="form">
						<div class="form-group">
							<label for="inputUserId">Usuário</label>
							<input type="text" class="form-control" id="inputUserId" placeholder="parâmetro userId" ng-model="formData.userId">
						</div>
						<div class="form-group">
							<label for="inputCash">Dinheiro</label>
							<input type="text" class="form-control" id="inputCash" placeholder="parâmetro cash" ng-model="formData.cash">
						</div>
						<div class="form-group">
							<label for="inputNewUser">Atualizar Usuário</label>
							<input type="text" class="form-control" id="inputNewUser" placeholder="parâmetro newUser" ng-model="formData.newUser">
						</div>
						<div class="btn-group btn-group-justified">
  						<div class="btn-group">
    						<button type="button" class="btn btn-default" ng-click="createCoin()">Adicionar</button>
  						</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>